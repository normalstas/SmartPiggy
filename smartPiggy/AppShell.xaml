<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="smartPiggy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:smartPiggy"
    Shell.FlyoutBehavior="Disabled"
    Title="SmartPiggyV2">
    <TabBar>
        <Tab Title="Копилка">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Расчет">
            <ShellContent  Title="Расходы" ContentTemplate="{DataTemplate local:Expenditure}" />
            <ShellContent  Title="Доходы" ContentTemplate="{DataTemplate local:Income}" />
        </Tab>
        <Tab Title="Задачник">
            <ShellContent ContentTemplate="{DataTemplate local:TaskPage}"/>
        </Tab>
    </TabBar>
</Shell>
