<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smartPiggy.MainPage"
             xmlns:local="clr-namespace:smartPiggy">

    <ScrollView>
        <StackLayout>

            <Label x:Name="sumlb"/>
            <StackLayout x:Name="st_piggy" Padding="5">
                <Label x:Name="condition_piggy" Text="Добавить копилку"/>
                <StackLayout x:Name="visnewpiggyStackLayout" Margin="10"/>
                <StackLayout x:Name="addPiggyStackLayout" Margin="10"/>
                <Button Text="+" Clicked="Create_Piggy_Click" x:Name="plus_piggy"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>
